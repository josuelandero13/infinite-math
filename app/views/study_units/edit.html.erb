<div class="p-8">
  <%= form_with model: @study_unit do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :unit_number %><br>
      <%= form.text_field :unit_number %>
    </div>

    <div>
      <%= form.label :study_branch %><br>
      <%= form.select :study_branch_id, options_for_select(
        StudyBranch.all.map { |branch| [branch.name, branch.id] }
      ), class: "mt-1 block w-full border border-gray-300 rounded-md
                 shadow-sm focus:ring focus:ring-blue-200" %>
    </div>

    <div>
      <%= form.label :content %><br>
      <%= form.rich_text_area :content %>
    </div>

    <div class="mt-6 flex">
      <%=
        form.submit "Update study unit",
        class: "text-black px-4 py-2 rounded hover:bg-green-700 border-2"
      %>
    </div>
  <% end %>
</div>