<div class="p-4 bg-white shadow-md rounded-lg w-full">
  <h1 class="text-2xl font-semibold text-gray-800 mb-2">
    <%= @study_unit.name %>
  </h1>

  <p class="text-gray-600">
    <%= "#{t(".label_number_unit")}: #{@study_unit.unit_number}" %>
  </p>

  <p class="text-gray-600">
    <%= "#{t(".label_study_branch")}: #{@study_unit.study_branch.name}" %>
  </p>

  <div class="text-gray-600 mb-4 mt-5 max-h-40 overflow-y-auto">
    <%= @study_unit.content %>
  </div>

  <div class="my-8">
    <%= link_to t("common.edit_button"), edit_study_unit_path(@study_unit),
          class: "bg-gray-600 text-white px-4 py-4 rounded hover:bg-gray-700 mr-2" %>
    <%= link_to t("common.delete_button"), study_unit_path(@study_unit),
          data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro?" },
          class: "bg-red-700 text-white px-4 py-4 hover:bg-red-800 mr-2 rounded" %>
  </div>
</div>