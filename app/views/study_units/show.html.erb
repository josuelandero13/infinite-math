<div class="p-4 bg-white shadow-md rounded-lg max-w-md mx-auto">
  <h1 class="text-2xl font-semibold text-gray-800 mb-2">
    <%= @study_unit.name %>
  </h1>

  <p class="text-gray-600 mb-4">
    Unit number: <%= @study_unit.unit_number %>
  </p>

  <p class="text-gray-600 mb-4">
    Study branch: <%= @study_unit.study_branch_id %>
  </p>

  <div class="text-gray-600 mb-4 max-h-40 overflow-y-auto">
    <%= @study_unit.content %>
  </div>

  <div class="mt-6 flex space-x-4">
    <%= link_to "Editar", edit_study_unit_path(@study_unit), class: "border-2 p-2 rounded" %>
    <%= link_to "Eliminar", study_unit_path(@study_unit),
                            data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro?" },
                            class: "text-red-600 border-2 p-2 rounded" %>
  </div>
</div>