<%= form_with url: sessions_path, method: :post, local: true,
      class: "max-w-md mx-auto p-6 bg-white shadow-md rounded-lg" do |form| %>
  <div class="mb-4">
    <%= form.label :login, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :login,
                        required: true,
                        class: "shadow appearance-none border rounded w-full py-2
                                px-3 text-gray-700 leading-tight focus:outline-none
                                focus:shadow-outline" %>
  </div>
  <div class="mb-6">
    <%= form.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.password_field :password,
                            required: true,
                            class: "shadow appearance-none border rounded w-full
                                    py-2 px-3 text-gray-700 leading-tight
                                    focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="flex items-center justify-between">
    <%= form.submit "To access", class: "bg-gray-600 text-white px-4 py-4
                                         rounded hover:bg-gray-700 mr-2" %>
  </div>
<% end %>
