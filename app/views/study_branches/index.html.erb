<%= link_to 'Agregar rama de estudio', new_study_branch_path, class: 'text-2xl p-8 font-bold hover:underline' %>

<div class="p-4">
  <section class="bg-white shadow-md rounded-lg p-6">
    <% @studys_branches.each do |study_branch| %>
      <div class="mb-4 border-b pb-4">
        <%= link_to study_branch_path(study_branch), class: 'link' do %>
          <span class="block text-lg font-semibold text-gray-700">
            <%= study_branch.name %>
          </span>
        <% end %>

        <span class="block text-sm text-gray-500">
          Course ID: <%= study_branch.course_id %>
        </span>
      </div>
    <% end %>
  </section>
</div>